{
  "name": "@docs-ts/docs-ts",
  "version": "1.0.13",
  "description": "Documentation tool for TypeScript packages",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "bin": "lib/bin.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf rm -rf lib/*",
    "docs": "ts-node docs.ts",
    "doctoc": "doctoc README.md --title \"**Table of contents**\"",
    "format": "prettier --ignore-unknown --list-different .",
    "format:fix": "prettier --ignore-unknown --write .",
    "test": "jest",
    "posttest": "npm run docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/docs-ts/docs-ts.git"
  },
  "author": "Giulio Canti <giulio.canti@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/docs-ts/docs-ts/issues"
  },
  "homepage": "https://github.com/docs-ts/docs-ts",
  "dependencies": {
    "chalk": "^2.4.2",
    "doctrine": "^3.0.0",
    "fp-ts": "^2.9.3",
    "fs-extra": "^11.0.0",
    "glob": "^8.0.0",
    "io-ts": "^2.2.16",
    "logging-ts": "^0.3.4",
    "markdown-toc": "^1.2.0",
    "rimraf": "^4.0.0",
    "ts-morph": "^19.0.0",
    "ts-node": "^10.8.2"
  },
  "devDependencies": {
    "@types/doctrine": "0.0.5",
    "@types/fs-extra": "9.0.13",
    "@types/glob": "8.1.0",
    "@types/jest": "29.5.2",
    "@types/node": "18.16.19",
    "@types/prettier": "2.7.3",
    "@types/rimraf": "3.0.2",
    "doctoc": "2.2.1",
    "jest": "29.6.1",
    "prettier": "2.8.8",
    "ts-jest": "29.1.1",
    "typescript": "5.1.6"
  },
  "peerDependencies": {
    "typescript": "^3.3.1 || ^4.x || ^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
